<% const pageType = "wifi_config"; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body>

<header>
    <% include ../../partials/pilot_header %>
</header>

<main>
    <br>
    <ul class="nav nav-tabs nav-justified">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#add">Add New Wifi Configuration</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#viewEdit">View / Edit Wifi Configuration</a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active show" id="add">
            <div class="container"><br><br><br></div>
            <div class="container">
                <h1 class="display-5">Wifi Information</h1>
                <form>
                    <fieldset>
                        <div class="form-group">
                            <label for="ssid">SSID</label>
                            <input type="text" class="form-control" id="ssid" placeholder="attwifi">
                        </div>
                        <div class="form-group">
                            <label for="wifiPassword">Password</label>
                            <input type="password" class="form-control" id="wifiPassword"
                                   placeholder="Password">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value=""
                                           onclick="showPassword()">
                                    Show Password
                                </label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ssid">Airport Code</label>
                            <input type="text" class="form-control" id="airportCode" placeholder="PHX">
                        </div>

                        <div class="form-group">
                            <label for="latitude">Latitude</label>
                            <input type="text" class="form-control" id="latitude"
                                   placeholder="37.234332396">
                        </div>

                        <div class="form-group">
                            <label for="logitude">Logitude</label>
                            <input type="text" class="form-control" id="logitude"
                                   placeholder="-115.80666344">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </fieldset>
                </form>
            </div>
        </div>

        <div class="tab-pane fade" id="viewEdit">
            <div class="container"><br><br><br></div>
            <div class="container">
                <input class="form-control mr-sm-1" type="text" placeholder="Search">
                <form class="form-inline my-2 my-lg-0">
                    <div class="btn-group btn-group-toggle btn-block" data-toggle="buttons">
                        <label class="btn btn-primary active">
                            <input type="radio" name="options" id="ssidSearch" autocomplete="off" checked=""> SSID
                        </label>
                        <label class="btn btn-primary rounded-bottom">
                            <input type="radio" name="options" id="airportCodeSearch" autocomplete="off"> Airport Code
                        </label>
                    </div>
                </form>
            </div>
            <div class="container"><br><br><br></div>
            <div class="container">
                <table class="table table-hover">
                    <thead>
                    <tr class="table-dark">
                        <td>SSID</td>
                        <td>Password</td>
                        <td>Airport Code</td>
                        <td>Latitude</td>
                        <td>Logitude</td>
                        <td>Action</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% Users.forEach(function (user) { %>
                    <tr>
                        <td class="align-middle"><%= user.ssid %></td>
                        <td class="align-middle"><%= user.password %></td>
                        <td class="align-middle"><%= user.airportCode %></td>
                        <td class="align-middle"><%= user.latitude %></td>
                        <td class="align-middle"><%= user.longitude %></td>
                        <td class="align-middle">
                            <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                            <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons green_icon">&#xE254;</i></a>
                            <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons red_icon">&#xE872;</i></a>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
</main>

<footer>
    <% include ../../partials/footer %>
</footer>

<!---------------------------------------->
<!-------------LOAD JS FILES-------------->
<!---------------------------------------->
<script src="/js/leaflet.js"></script>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap4-toggle.min.js"></script>
<script src="/js/map.js"></script>
<script src="/js/custom.js"></script>

</body>
</html>