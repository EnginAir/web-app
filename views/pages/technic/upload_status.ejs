<!-- views/pages/defaultTemplate.ejs -->
<% const pageType = "upload_status"; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body>

<header>
    <% include ../../partials/technic_header %>
</header>
<main>
    <div id="container">
        <div id="sidebar">
            <div class="sidebar-wrapper">
                <div class="panel panel-default" id="features" style="margin-left: 20px">
                    <div class="panel-heading">
                        <h4 class="panel-title">Landing Data</h4>
                    </div>
                    <div class="panel-body">
                        <div class="card">

                            <div class="card-body">
                                <h6>Filter by Upload Status</h6>
                                <form class="form-group">
                                    <div class="form-row">
                                        <label class="form-check-label" for="defaultCheck1">Success</label>
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    </div>
                                    <div class="form-row">
                                        <label class="form-check-label" for="defaultCheck1">Pending</label>
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    </div>
                                    <div class="form-row">
                                        <label for="defaultCheck1">Failed</label>
                                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h6>Search by:</h6>
                                <form class="form-group">
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">LAT</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                                    </div>
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">LON</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                                    </div>
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">DB #</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                                    </div>
                                    <div class="input-group input-group-sm mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroup-sizing-sm">Airport</span>
                                        </div>
                                        <input type="text" class="form-control" aria-label="Small">
                                    </div>


                                </form>

                            </div>
                        </div>
                        <button id="submitForm" class="btn btn-light float-right" type="submit">Search</button>

                    </div>
                </div>
            </div>
        </div>
        <div id="map"></div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>

<!---------------------------------------->
<!-------------LOAD JS FILES-------------->
<!---------------------------------------->
<script src="/js/leaflet.js"></script>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap4-toggle.min.js"></script>
<script src="/js/map.js"></script>

<script>
    var coord;
    for (coord = 0; coord < fakeData.length; coord++) {
        if (fakeData[coord].outcome === "SUCCESS_UPLOAD") {

            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], greenIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                           "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                           "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                           "<br /><b>Status: </b> Success")
                .addTo(map);
        }
        if (fakeData[coord].outcome === "FAIL_NO_LANDING" ||
            fakeData[coord].outcome === "FAIL_NO_WIFI_AIRPORT" ||
            fakeData[coord].outcome === "FAIL_NO_WIFI_AIRCRAFT") {
            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], redIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                           "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                           "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                           "<br /><b>Status: </b> Failure")
                .addTo(map);
        }
        if (fakeData[coord].outcome === "FAIL_WAP_CHANGED" ||
            fakeData[coord].outcome === "FAIL_DEAD_EDG100") {
            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], yellowIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                           "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                           "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                           "<br /><b>Status: </b> Pending")
                .addTo(map);
        }
    }


</script>
</body>
</html>