<!-- views/pages/defaultTemplate.ejs -->
<% const pageType = "upload_status"; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body>
<header>
    <% include ../../partials/technic_header %>
</header>
<main>
    <div class="row h-100 justify-content-center align-items-center m-0">
        <div class="col-2">
            <div class="card border-secondary mb-3">
                <h4 class="card-header">Landing Data</h4>
                <div class="card-body">
                    <h5 class="card-title">Filter by Upload Status</h5>
                    <form class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" checked="" value="">
                                Success
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" checked="" value="">
                                Pending
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" checked="" value="">
                                Failed
                            </label>
                        </div>
                        <hr class="my-4">
                        <h5 class="card-title">Search By</h5>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Lat</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Lon</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">DB#</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Airport</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                        </div>
                        <hr class="my-4">
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col px-0">
            <div id="map"></div>
        </div>
    </div>
</main>
<footer>
    <% include ../../partials/footer %>
</footer>

<!---------------------------------------->
<!-------------LOAD JS FILES-------------->
<!---------------------------------------->
<script src="/js/leaflet.js"></script>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/bootstrap4-toggle.min.js"></script>
<script src="/js/map.js"></script>

<script>
    var coord;
    for (coord = 0; coord < fakeData.length; coord++) {
        if (fakeData[coord].outcome === "SUCCESS_UPLOAD") {

            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], greenIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                    "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                    "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                    "<br /><b>Status: </b> Success")
                .addTo(map);
        }
        if (fakeData[coord].outcome === "FAIL_NO_LANDING" ||
            fakeData[coord].outcome === "FAIL_NO_WIFI_AIRPORT" ||
            fakeData[coord].outcome === "FAIL_NO_WIFI_AIRCRAFT") {
            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], redIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                    "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                    "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                    "<br /><b>Status: </b> Failure")
                .addTo(map);
        }
        if (fakeData[coord].outcome === "FAIL_WAP_CHANGED" ||
            fakeData[coord].outcome === "FAIL_DEAD_EDG100") {
            marker = new L.circleMarker([fakeData[coord].landingPoint.geometry[0], fakeData[coord].landingPoint.geometry[1]], yellowIcon)
                .bindPopup("<b>Tail Number: </b>" + fakeData[coord].tailNumber +
                    "<br /><b>X: </b>" + fakeData[coord].landingPoint.geometry[0] +
                    "<br /><b>Y: </b>" + fakeData[coord].landingPoint.geometry[1] +
                    "<br /><b>Status: </b> Pending")
                .addTo(map);
        }
    }


</script>
</body>
</html>